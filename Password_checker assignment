def password_checker():
    correct_password = "python123"    
    trials = 5

    while trials > 0:
        password = input("Enter your password: ")

        if password == correct_password:
            print("Access granted.")
            break
        else:
            trials -= 1
            if trials > 0:
                print(f"Incorrect password. You have {trials} trial(s) remaining.")
            else:
                print("You are out of trials. Access denied.")

password_checker()
